<UserControl
    x:Class="AvaloniaPrsimSimple.Views.TestExStackPanelView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="using:AvaloniaPrsimSimple.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaloniaPrsimSimple.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:TestExStackPanelViewModel"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="Auto,*">

        <StackPanel>
            <Button
                Grid.Column="0"
                Width="80"
                Height="40"
                Command="{Binding AddItemCommand}"
                Content="添加" />
            <Button
                Grid.Column="0"
                Width="80"
                Height="40"
                Command="{Binding RemoveItemCommand}"
                Content="删除" />
        </StackPanel>
        <ctrl:StackPanelEx Grid.Column="1" Background="Bisque">
            <ItemsControl
                MinHeight="200"
                Background="Red"
                ItemsSource="{Binding StackPanelItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ctrl:StackPanelEx MinHeight="20" Margin="0,10,0,10" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Styles />
            </ItemsControl>
        </ctrl:StackPanelEx>
    </Grid>

</UserControl>
