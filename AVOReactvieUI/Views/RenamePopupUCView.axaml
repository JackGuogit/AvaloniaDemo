<UserControl
    x:Class="AVOReactiveUI.Views.RenamePopupUCView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <!--  原始显示框  -->
        <TextBlock
            x:Name="DisplayTextBox"
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="双击我重命名" />

        <!--  弹出的 Popup  -->
        <Popup
            x:Name="RenamePopup"
            Placement="Bottom"
            PlacementTarget="{Binding #DisplayTextBox}">
            <Border
                Width="250"
                Padding="10"
                Background="White"
                CornerRadius="6">
                <StackPanel Spacing="8">
                    <TextBlock Text="重命名：" />
                    <TextBox x:Name="InputBox" />
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="8">
                        <!--  确认按钮：复制文本 + 关闭 Popup  -->
                        <Button Content="确认" />
                        <!--  取消按钮：仅关闭 Popup  -->
                        <Button Content="取消" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
