<Window x:Class="AvaloniaFormTest.SelectFolderForm"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dialogs="using:Avalonia.Dialogs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        Height="450" Width="600"
        CanResize="False"
        
        WindowStartupLocation="CenterOwner"
        Title="SelectFolderForm"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">
    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 5 10 5"
            BoxShadow="0 4 12 0 #0F000000" CornerRadius="8" Background="#FFFFFFFF" BorderThickness="1" BorderBrush="#FFE5E5E5">
        <Grid RowDefinitions="Auto,*,Auto">
            <StackPanel Grid.Row="0">
                <TextBlock Text="Select a folder:" Margin="0,0,0,5"/>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox x:Name="FolderPath" Grid.Column="0"/>
                    <Button Grid.Column="1" Content="Browse..." Margin="5,0,0,0" Click="Button_Click"/>
                </Grid>
            </StackPanel>
            <Grid Grid.Row="1" RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="Selected Folder Contents:"/>
                <TextBox Grid.Row="1" TextWrapping="Wrap" Classes="TextArea" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </Grid>
            <StackPanel Margin="0 10 0 0" Orientation="Horizontal" Spacing="20" HorizontalAlignment="Right" Grid.Row="2">
                <Button Content="Confirm" Click="Confirm_Click"/>
                <Button Content="Cancel" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
