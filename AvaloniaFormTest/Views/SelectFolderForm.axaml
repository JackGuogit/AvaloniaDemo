<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dialogs="using:Avalonia.Dialogs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        x:Class="AvaloniaFormTest.SelectFolderForm"
        Title="SelectFolderForm">
    <Border HorizontalAlignment="Center" Height="300" Width="400" VerticalAlignment="Center">
        <Grid RowDefinitions="Auto,*">
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                <TextBox Name="FolderPath" Grid.Column="0"/>
                <Button Grid.Column="1" Content="Browse..." Margin="5,0,0,0" Click="Button_Click"/>
            </Grid>
            <Grid Grid.Row="1" >
                            <TextBox TextWrapping="Wrap" Classes="TextArea"/>
            </Grid>
        </Grid>
    </Border>
</Window>
